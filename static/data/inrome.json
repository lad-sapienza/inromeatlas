{
  "version": 8,
  "name": "InRome",
  "minzoom": 0,
  "maxzoom": 24,
  "sources": {
    "greg_plg_parcel": {
      "type": "vector",
      "tiles": ["https://inrome.sns.it/vtiles/greg_plg_parcel/{z}/{x}/{y}"],
      "maxzoom": 24
    },
    "greg_ln": {
      "type": "vector",
      "tiles": ["https://inrome.sns.it/vtiles/greg_ln/{z}/{x}/{y}"],
      "maxzoom": 24
    },
    "greg_pt": {
      "type": "vector",
      "tiles": ["https://inrome.sns.it/vtiles/greg_pt/{z}/{x}/{y}"],
      "maxzoom": 24
    },
    "EsriSat": {
      "type": "raster",
      "tiles": [
        "https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}"
      ]
    }
  },
  "layers": [
    {
      "id": "sat-esri",
      "source": "EsriSat",
      "type": "raster",
      "metadata": {
        "label": "ESRI Satellite"
      }
    },
    {
      "id": "greg_polygons",
      "source": "greg_plg_parcel",
      "source-layer": "greg_plg_parcel",
      "type": "fill",
      "metadata": {
        "label": "Particelle Gregoriano",
        "popupTemplate": "<strong>Parcel: ${parcel_no}<br>Type of use: ${type_of_use}<br>Type: ${type}<br>Alternative toponyms: ${alternative_toponyms}</strong>",
        "searchInFields": {
          "parcel": "Parcel",
          "label": "Type"
        }
      },
      "paint": {
        "fill-opacity": 0.3,
        "fill-color": [
          "match",
          ["get", "type"],
          "Land",
          "#c7ff99",
          "Building",
          "#fe9a25",
          "Land,Building",
          "#4c9102",
          "#000"
        ],
        "fill-outline-color": "#ffffff"
      }
    },
    {
      "id": "greg_polygons_pl",
      "source": "greg_plg_parcel",
      "source-layer": "greg_plg_parcel",
      "type": "line",
      "paint": {
        "line-color": "#ffffff",
        "line-width": 1
      }
    },
    {
      "id": "greg_pt",
      "source": "greg_pt",
      "source-layer": "greg_pt",
      "type": "circle",
      "metadata": {
        "label": "Punti Gregoriano",
        "popupTemplate": "<strong>Status: ${status}<br>Type: ${label}</strong>",
        "searchInFields": {
          "status": "Status",
          "label": "Type"
        }
      },
      "maxzoom": 24,
      "minzoom": 14,
      "paint": {
        "circle-opacity": 0.5,
        "circle-color": "#ffff00",
        "circle-stroke-width": 1,
        "circle-stroke-color": "#000000"
      }
    }
  ]
}
